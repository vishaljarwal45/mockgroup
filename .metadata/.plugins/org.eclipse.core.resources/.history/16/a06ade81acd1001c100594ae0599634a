package practice;

public class PrcNestedIf {

	public static void main(String[] args) {

		int age=25;
		int weight=75;
		
		if(age>=18) {
		if (weight>=55) { System.out.println("you are eligible for blood donation");	
		}
		else {System.out.println("you are ineligible");}
		
		}else {System.out.println("your age should be greater than 18 ");}
		

}
}